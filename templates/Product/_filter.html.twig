<div class="well bg-light">
    {{ form_start(form, {'attr': {'class': 'form-inline justify-content-around my-3 py-3' },'method': 'post'}) }}
    <div class="form-group">
        {{ form_widget(form.description, {'attr': {'class': '', 'placeholder': 'app.grid.product.description'|trans }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.quantity, {'attr': {'placeholder': 'app.grid.product.quantity'|trans}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.price, {'attr': {'placeholder': 'app.grid.product.price'|trans  }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>