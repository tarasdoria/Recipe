{% if form is defined %}
    {% form_theme form 'Form/app_theme.html.twig' %}
{% endif %}
<div class="well bg-light">
    {{ form_start(form, {'attr': {'class': 'form-inline justify-content-around my-3 py-3' },'method': 'post'}) }}

    <div class="form-group">
        {{ form_widget(form.name, {'attr': {'class': '', 'placeholder': 'app.grid.recipe.name'|trans }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.createDate.year, {'attr': {'class': 'no-choices' }}) }}
        {{ form_widget(form.createDate.month, {'attr': {'class': 'no-choices' }}) }}
        {{ form_widget(form.createDate.day, {'attr': {'class': 'no-choices' }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.author, {'attr': {'placeholder': 'app.grid.recipe.author'|trans  }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>