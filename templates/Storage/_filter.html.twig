<div class="well bg-light">
    {{ form_start(form, {'attr': {'class': 'form-inline justify-content-around my-3 py-3' },'method': 'post'}) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_widget(form.name, {'attr': {'placeholder': 'app.grid.storage.name'|trans }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.description, {'attr': {'placeholder': 'app.grid.storage.description'|trans }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>